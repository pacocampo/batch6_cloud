info:
  title: Salt Stack
  author: Google Inc.
  description: Creates a set of VMs each running either a Salt master or minion daemon in a Docker container.

imports:
- path: minion.jinja
- path: master.jinja

required:
- zone

properties:
  minionCount:
    description: How many minion VMs to set up.
    type: integer
    default: 1
  zone:
    description: Zone to create the resources in.
    type: string
