info:
  title: Container Instance.
  author: Google Inc.
  description: Creates a container VM with a provided docker image.
  version: 1.0

imports:
  - path: container_helper.py
  - path: vm_instance.py
  - path: common.py
  - path: default.py

required:
  - dockerImage

properties:
  zone:
    description: Zone in which this VM will run
    type: string
    default: us-central1-f
  containerImage:
    description: Name of the Google Cloud Container VM Image
    type: string
    default: family/cos-stable
  dockerImage:
    description: String containing the docker image to instantiate
    type: string
  dockerEnv:
    description: >
      Environment variables to set before the container runs. See
      https://cloud.google.com/compute/docs/containers/container_vms
    type: object
