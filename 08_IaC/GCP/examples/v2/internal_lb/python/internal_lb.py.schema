info:
  title: Internal Load Balancer
  author: Google Inc.
  description: The minimum configuration for an internal load balancer.

required:
- network
- subnet
- instance-groups

properties:
  region:
    type: string
    description: GCP region to create resources in.
    default: us-central1
  network:
    type: string
    description: Self link for a GCE network in which the service will run.
  subnet:
    type: string
    description: Self link for a GCE subnet in which the service will run.
  instance-groups:
    type: array
    description: A list of instance group self links for the service.
    items:
      type: string
  instance-groups:
    type: string
    description: The tag on instances which should be load balanced.
